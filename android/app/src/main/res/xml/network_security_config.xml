<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext (HTTP) traffic for local development and specific domains -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Local IP address -->
        <domain includeSubdomains="true">192.168.43.73</domain>
        <!-- Hostinger domain if using HTTP -->
        <domain includeSubdomains="true">mediumturquoise-porcupine-694169.hostingersite.com</domain>
    </domain-config>
    <!-- Default: block cleartext for all other domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>

